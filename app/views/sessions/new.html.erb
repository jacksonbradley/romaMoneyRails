<% provide(:title, "Sign in") %>
<div class="row">
  <aside class="span4">
      <section>
      </section>
  </aside>
  <div class="span8 offset4 transaction-box" style="border-radius:15px; padding-bottom:20px; margin-bottom:70px">

    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
<p>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
