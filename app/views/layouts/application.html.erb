<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

<% if false%>
<!--    <title><%= content_for?(:title) ? yield(:title) : "Roma Money Rails" %></title> -->
<%end%>    
     <title><%= full_title_page(yield(:title)) %></title>

     <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Roma Money Rails" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
<!-- 
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
 -->
    <%= render 'layouts/shim' %>  <!-- Call the part with IE9-->
  </head>
  <body>
    <%# application layout styled for Twitter Bootstrap 2.3 %>
    <header>
      <%= render 'layouts/header' %>
    </header>
    <main role="main">
      <div class="content" style="padding-left:10px">
        <div class="row">
          <div class="span12">
            <div class="row">
              <div class="span4"></div>
              <div class="span8">
                <%= render 'layouts/messages' %> 
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span12">
            <%= yield %>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="span12">
              <%= debug(params) if Rails.env.development? %>
            </div>
          </div>
        </div>
      </div>

    </main>
    <%= render 'layouts/footer' %>
    <%= render 'layouts/copywrite' %>
  </body>
</html>
