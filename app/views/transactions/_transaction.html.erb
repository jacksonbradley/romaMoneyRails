<div class="transaction-box">
	<p><b>Transaction Name: </b><%=transaction.name%></p>

	<p><b>Description:</b><%=transaction.description%>
	</p>
	<p class="value-<%=transaction.how_is_value%>">
		<b>Value:</b> $ <%= transaction.value %>
	</p>
	<p><b>Date: </b><%= transaction.date.strftime("%d/%b/%Y") %>

	<p><b>Account: </b><%= transaction.account.name %>
	<p><b>Category: </b><%= transaction.category.name %>
	<p>
	<%= link_to "Change", edit_transaction_path(transaction) %>
    | <%= link_to "delete", transaction, method: :delete, remote: true,
                                  data: { confirm: "You sure?" } %>

</div>
