<span id="account_list" class="dropdown center" style="padding:10px">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.current_account.name %> <b class="caret"></b>
    </a>
	<ul class="dropdown-menu">  
		<% current_user.accounts.each do |account| %>
			<% if account.name != current_user.current_account.name %>
				<li> <%= link_to account.name, change_account_ajax_user_path(account), remote: true %>
		        </li>

			<%end%>
		<% end %>
	 </ul>
